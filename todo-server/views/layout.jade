doctype html
html
  head
    title Todo
    script(src="/javascripts/angular.min.js")
    script(src="/javascripts/angular-classy.min.js")
    script(src="/javascripts/app.js")
    script(src="/javascripts/todo-classy.js")
  body(ng-app="todoApp")
    div(style="margin-left: 20px;")
      h2 Todo
      div(ng-controller="TodoController")
        span {{remaining()}} of {{todos.length}} remaining
        | [
        a(href="", ng-click="archive()") archive
        | ]
        ul.unstyled
          li(ng-repeat="todo in todos")
            input(type="checkbox", ng-model="todo.done")
            span(class="done-{{todo.done}}") {{todo.text}}
        form(ng-submit="addTodo()")
          input(type="text", ng-model="todoText", size="30", placeholder="add new todo here")
          input.btn-primary(type="submit", value="add")
